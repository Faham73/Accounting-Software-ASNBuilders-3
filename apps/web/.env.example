# This file lists environment variables used by the Next.js app
# Copy to .env.local for local development
# For Vercel deployment, set these in the Vercel dashboard

# Database (inherited from root .env.example)
# DATABASE_URL is required and should be set at root level

# Authentication
JWT_SECRET=your-secret-key-change-in-production

# Application URL (optional, auto-detected on Vercel via VERCEL_URL)
APP_URL=http://localhost:3000
# NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Base path if deploying under a subpath
# NEXT_PUBLIC_BASE_PATH=/accounting